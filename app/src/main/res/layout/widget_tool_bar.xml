<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/navBarColor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/logo_title"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="-8dp"
        />

    <TextView
        android:id="@+id/title_name"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/navBarTitleColor"
        android:shadowColor="@color/navBarTitleShadowColor"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="2"
        android:textSize="@dimen/sizeTitle"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <Button
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:drawableLeft="@mipmap/ic_back"
            android:text="返回"
            android:layout_marginRight="16dp"
            android:background="@drawable/selector_btn_transparent"
            />
        <ImageButton
            android:id="@+id/export"
            android:minWidth="48dp"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_export"
            android:background="@drawable/selector_btn_transparent"
            android:visibility="gone"
            />
        <ImageButton
            android:id="@+id/title_rightImage"
            android:minWidth="48dp"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_transparent"
            android:src="@mipmap/ic_bluetooth"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/second_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:text="蓝牙未连接"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/sizeBody"
            />
        <TextView
            android:id="@+id/title_rightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>