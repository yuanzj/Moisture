<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <Button
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="48dp"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_back"
        android:text="返回"
        android:background="@drawable/selector_btn_transparent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold"
        />
        <TextView
            android:id="@+id/second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="蓝牙未连接"
            android:textColor="@color/colorSecondBody"
            android:textSize="@dimen/sizeBody"
            />
    </LinearLayout>


    <ImageButton
        android:id="@+id/export"
        android:minWidth="48dp"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:src="@mipmap/ic_export"
        android:background="@drawable/selector_btn"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_rightImage"
        android:minWidth="48dp"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/selector_btn"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_rightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>