<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/logo_title"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right"
                >
                <Button
                    android:id="@+id/title_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="48dp"
                    android:textSize="16sp"
                    android:layout_gravity="right"
                    android:drawableLeft="@mipmap/ic_back"
                    android:visibility="gone"
                    android:text="@string/content_back"
                    android:background="@drawable/selector_btn_transparent"
                    />
                <ImageButton
                    android:id="@+id/export"
                    android:minWidth="48dp"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_export"
                    android:background="@drawable/selector_btn"
                    android:visibility="gone"
                    />
                <ImageButton
                    android:id="@+id/title_rightImage"
                    android:minWidth="48dp"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_transparent"
                    android:src="@mipmap/ic_bluetooth"
                    />
                <TextView
                    android:id="@+id/second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="16dp"
                    android:text="@string/content_not_connect"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/sizeBody"
                    />
                <TextView
                    android:id="@+id/title_rightTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone" />
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu_01"
                    android:layout_width="@dimen/home_card_width"
                    android:layout_height="@dimen/home_card_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    app:cardCornerRadius="@dimen/home_card_radius"
                    app:cardElevation="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default">

                        <ImageView
                            android:layout_width="@dimen/image_list_size"
                            android:layout_height="@dimen/image_list_size"
                            android:src="@mipmap/ic_dew_point" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_default">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_measure"
                                android:textColor="@color/colorBody"
                                android:textSize="@dimen/sizeSubTitle"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aw Measure"
                                android:textColor="@color/colorSecondBody"
                                android:textSize="@dimen/sizeBody"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu_02"
                    android:layout_width="@dimen/home_card_width"
                    android:layout_height="@dimen/home_card_height"
                    android:layout_marginTop="@dimen/home_card_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    app:cardCornerRadius="@dimen/home_card_radius"
                    app:cardElevation="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default">

                        <ImageView
                            android:layout_width="@dimen/image_list_size"
                            android:layout_height="@dimen/image_list_size"
                            android:src="@mipmap/ic_edit_file" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_default">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_correct"
                                android:textColor="@color/colorBody"
                                android:textSize="@dimen/sizeSubTitle"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Data Correction"
                                android:textColor="@color/colorSecondBody"
                                android:textSize="@dimen/sizeBody"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu_03"
                    android:layout_width="@dimen/home_card_width"
                    android:layout_height="@dimen/home_card_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    app:cardCornerRadius="@dimen/home_card_radius"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default">

                        <ImageView
                            android:layout_width="@dimen/image_list_size"
                            android:layout_height="@dimen/image_list_size"
                            android:src="@mipmap/ic_view_file" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_default">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_query"
                                android:textColor="@color/colorBody"
                                android:textSize="@dimen/sizeSubTitle"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Query History"
                                android:textColor="@color/colorSecondBody"
                                android:textSize="@dimen/sizeBody"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu_04"
                    android:layout_width="@dimen/home_card_width"
                    android:layout_height="@dimen/home_card_height"
                    android:layout_marginTop="@dimen/home_card_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    app:cardCornerRadius="@dimen/home_card_radius"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default">

                        <ImageView
                            android:layout_width="@dimen/image_list_size"
                            android:layout_height="@dimen/image_list_size"
                            android:src="@mipmap/ic_settings" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_default">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_setting"
                                android:textColor="@color/colorBody"
                                android:textSize="@dimen/sizeSubTitle"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Application Settings"
                                android:textColor="@color/colorSecondBody"
                                android:textSize="@dimen/sizeBody"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/factory_name"
            android:paddingLeft="32dp"
            android:textColor="@color/colorBody"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="22dp"
            android:id="@+id/title_name"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/navBarTitleColor"
            android:shadowColor="@color/navBarTitleShadowColor"
            android:shadowRadius="1"
            android:shadowDx="0"
            android:shadowDy="2"
            android:textSize="32sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/factory_name_full"
        android:gravity="center"
        android:textColor="@color/colorBody"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>