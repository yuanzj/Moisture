<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/padding_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="查询频率"
            android:textColor="@color/colorSecondBody"
            android:textSize="@dimen/sizeBody" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_default"
            android:entries="@array/setting_rate" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="毫秒"
            android:textColor="@color/colorSecondBody"
            android:textSize="@dimen/sizeBody" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="风机占空比"
                android:textColor="@color/colorSecondBody"
                android:textSize="@dimen/sizeBody" />

        <EditText
                android:id="@+id/ratio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/padding_default"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg_selector"
                android:focusableInTouchMode="true"
                android:hint="请输入参数"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorBody"
                android:textCursorDrawable="@drawable/solid_shape_bottom_line"
                android:textSize="@dimen/sizeSubTitle" />


    </LinearLayout>

</LinearLayout>